{
    "dataset_reader": {
      "class_name": "emo_multi_reader",
      "data_path": "data",
      "name": "mnli",
      "train": "train.tsv",
      "valid": "valid.tsv",
      "test": "test.tsv"
    },
    "dataset_iterator": {
      "class_name": "emo_multi_iterator",
      "features": ["utt_1", "utt_2"],
      "label": "emotion",
      "seed": 42
    },
    "chainer": {
      "in": ["utt_1", "utt_2"],
      "in_y": ["y"],
      "pipe": [
        {
          "class_name": "torch_transformers_preprocessor",
          "vocab_file": "{BASE_MODEL}",
          "do_lower_case": false,
          "max_seq_length": 128,
          "in": ["utt_1", "utt_2"],
          "out": ["bert_features"]
        },
        {
          "id": "classes_vocab",
          "class_name": "simple_vocab",
          "fit_on": ["y"],
          "save_path": "src/emotion_classifier/classes.dict",
          "load_path": "src/emotion_classifier/classes.dict",
          "in": ["y"],
          "out": ["y_ids"]
        },
        {
          "in": ["y_ids"],
          "out": ["y_onehot"],
          "class_name": "one_hotter",
          "depth": "#classes_vocab.len",
          "single_vector": true
        },
        {
          "class_name": "torch_transformers_classifier",
          "n_classes": "#classes_vocab.len",
          "return_probas": true,
          "pretrained_bert": "{BASE_MODEL}",
          "save_path": "src/emotion_classifier/model",
          "load_path": "src/emotion_classifier/model",
          "optimizer": "AdamW",
          "optimizer_parameters": {
            "lr": 2e-05
          },
          "learning_rate_drop_patience": 3,
          "learning_rate_drop_div": 2.0,
          "in": ["bert_features"],
          "in_y": ["y_ids"],
          "out": ["y_pred_probas"]
        },
        {
          "in": ["y_pred_probas"],
          "out": ["y_pred_ids"],
          "class_name": "proba2labels",
          "max_proba": true
        },
        {
          "in": ["y_pred_ids"],
          "out": ["y_pred_labels"],
          "ref": "classes_vocab"
        }
      ],
      "out": ["y_pred_labels"]
    },
    "train": {
      "batch_size": 64,
      "metrics": ["accuracy"],
      "validation_patience": 10,
      "val_every_n_batches": 250,
      "log_every_n_batches": 250,
      "show_examples": false,
      "evaluation_targets": ["train", "valid"],
      "class_name": "torch_trainer",
      "tensorboard_log_dir": "{MODEL_PATH}/",
      "pytest_max_batches": 2
    },
    "metadata": {
      "variables": {
        "ROOT_PATH": "~/.deeppavlov",
        "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
        "MODELS_PATH": "{ROOT_PATH}/models",
        "MODEL_PATH": "{MODELS_PATH}/classifiers/glue_mnli_torch_cased_bert",
        "BASE_MODEL": "bert-base-cased"
      }
    }
  }
  